{
    "extends": [
        "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "globals": {
        "pfadiSettings": "readonly",
        "pfadi_ajax": "readonly",
        "jQuery": "readonly",
        "$": "readonly"
    },
    "rules": {
        "camelcase": "off",
        "no-console": "off",
        "no-var": "error"
    },
    "parserOptions": {
        "requireConfigFile": false,
        "ecmaVersion": 2021,
        "sourceType": "module"
    }
}